                                                <tr class="a">
                                                    <th class="text-primary">Job Post Id</th>
                                                    <th class="text-primary">Job Type</th>
                                                    <th class="text-primary">Created Date</th>
                                                    <th class="text-primary">End Date</th>
                                                    <th class="text-primary">Get Applicants Details</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(var i=0; i < all_postings.length; i++) { %>

                                                    <tr>
                                                        <td>
                                                            <%= all_postings[i].job_post_id %>
                                                        </td>
                                                        <td>
                                                            <%= all_postings[i].job_type %>
                                                        </td>
                                                        <td>
                                                            <%= all_postings[i].created_date %>
                                                        </td>
                                                        <td>
                                                            <%= all_postings[i].end_date %>
                                                        </td>
                                                        <td>
                                                            <a href="/companyJobPostingsApplied?id=<%= all_postings[i].job_post_id %>"
                                                                class="b btn btn-outline-primary btn-sm"
                                                                id="<%= all_postings[i].job_post_id %>">
                                                                Click Here</a>
                                                            <br>
                                                            <br><br>
                                                        </td>

                                                    </tr>


