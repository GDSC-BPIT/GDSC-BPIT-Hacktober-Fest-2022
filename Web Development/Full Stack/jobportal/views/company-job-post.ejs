    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body>
  <div class="container-scroller">
    <nav class="navbar col-lg-12 col-12 fixed-top d-flex flex-row" style="background: white;">

      <h3 class="font-weight-bold" style="padding-left: 2em;color:#4B49AC;">True CV</h3>
      <br><br>
    </nav>
    <div class="container-fluid page-body-wrapper">
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/companyDashboard">
              <i class="icon-grid menu-icon"></i>
              <span class="menu-title">Dashboard</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/companyJobPostings">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">Job Openings</span>
            </a>
          </li>
          <li class="nav-item active ">
            <a class="nav-link" href="/companyJobPostNew">
              <i class="icon-paper menu-icon"></i>
              <span class="menu-title">Post A New Job</span>
            </a>
          </li>
        </ul>
      </nav>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">New Job Post</h4>
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="exampleInputName1">Job Post ID</label>
                      <input type="text" class="form-control" name="job_post_id" placeholder="Job post ID">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputName1">Job Type</label>
                      <input type="text" class="form-control" name="job_type" placeholder="Name">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputEmail3">Start Date</label>
                      <input type="date" class="form-control" name="created_date" placeholder="">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputPassword4">End Date</label>
                      <input type="date" class="form-control" name="end_date" placeholder="">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputName1">Job Location</label>
                      <input type="text" class="form-control" name="job_location" placeholder="City">
                    </div>

                    <div class="form-group">
                      <label for="exampleTextarea1">Job description</label>
                      <textarea class="form-control" name="job_description" rows="4"></textarea>
                    </div>

                    <input type="submit" class="btn btn-primary mr-2">
                    <button class="btn btn-light">Cancel</button>
                  </form>
                  <a href="/companyDashboard" id="clicker1" style="visibility: hidden"></a>
                  <a href="/companyJobPostNew" id="clicker2" style="visibility: hidden"></a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <script type="text/javascript">
    console.log('jilop')
    $('form').on('submit', function (e) {
      e.preventDefault()
      console.log('jiii')
      console.log($(this).serialize());

      $.ajax({
        url: '/companyJobPostNewFormSubmit',
        type: 'post',
        data: $(this).serialize()
      }).done(response => {
        if (response['stat'] == 'right') {
          alert('Successfully posted a new job!!!')
          document.getElementById('clicker1').click();
        }
        else if (response['stat'] == 'exist') {
          alert('Job ID already exist');
          document.getElementById('clicker2').click();
        }
      });
    })

  </script>
  <!-- container-scroller -->
